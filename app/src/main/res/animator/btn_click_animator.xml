<!-- res/animator/button_state_list_animator.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi button được nhấn và có thể sử dụng -->
    <item android:state_pressed="true" android:state_enabled="true">
        <set>
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleX"
                android:valueTo="0.95" />
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleY"
                android:valueTo="0.95" />
        </set>
    </item>
    <!-- Trạng thái mặc định khi button không được nhấn -->
    <item android:state_enabled="true">
        <set>
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleX"
                android:valueTo="1" />
            <objectAnimator
                android:duration="20"
                android:propertyName="scaleY"
                android:valueTo="1" />
        </set>
    </item>
</selector>
