<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:stretchColumns="6">
    <TableRow
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/item_oder_detail_txtName"
            android:width="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_oder_detail_txtQuantity"
            android:width="0dp"
            android:layout_weight="1"
            />
        <TextView
            android:id="@+id/item_oder_detail_txtPrice"
            android:width="0dp"
            android:layout_weight="1"/>
        <TextView
            android:id="@+id/item_oder_detail_txtTotal"
            android:width="0dp"
            android:layout_weight="1"/>
        <ImageView
            android:id="@+id/item_oder_detail_ImgEdit"
            android:stateListAnimator="@animator/btn_click_animator"
            android:src="@drawable/baseline_edit_note_24"
            android:padding="3dip" />
    </TableRow>
</TableLayout>