<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentManager.ScreenFragment.ScreenFragment2">

    <ImageView
        android:id="@+id/img"
        android:stateListAnimator="@animator/btn_click_animator"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:layout_centerInParent="true"
        android:src="@drawable/chao1" />

    <TextView
        android:text="@string/desM"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/text_clString"
        android:gravity="center"
        android:layout_gravity="center"
        android:padding="5dp"/>
</RelativeLayout>